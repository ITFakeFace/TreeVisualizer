<Page
    x:Class="TreeVisualizer.Views.QuizzDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TreeVisualizer.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="QuizzDetailsPage"
    d:DesignHeight="1080"
    d:DesignWidth="1700"
    mc:Ignorable="d">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>
        <ListBox
            x:Name="ListBoxDetails"
            Grid.Column="0"
            Margin="20"
            DisplayMemberPath="Question"
            FontSize="24"
            SelectionChanged="ListBoxDetails_SelectionChanged"
            SelectionMode="Single" />
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Width="Auto" Margin="20">

                <!--  Title  -->
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="32"
                    FontWeight="Bold"
                    Text="Question:" />
                <TextBox
                    x:Name="InpQuestion"
                    Height="160"
                    Margin="0,0,0,20"
                    AcceptsReturn="True"
                    FontSize="32"
                    TextWrapping="Wrap" />

                <!--  Answers  -->
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="32"
                    FontWeight="Bold"
                    Text="Answers:" />

                <WrapPanel
                    ItemHeight="Auto"
                    ItemWidth="Auto"
                    Orientation="Vertical">

                    <!--  Answer 1  -->
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <RadioButton
                            x:Name="RadioAnswer1"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            GroupName="Answer">
                            <RadioButton.LayoutTransform>
                                <ScaleTransform ScaleX="3" ScaleY="3" />
                            </RadioButton.LayoutTransform>
                        </RadioButton>
                        <TextBox
                            x:Name="InpAnswer1"
                            Width="1200"
                            Height="120"
                            AcceptsReturn="True"
                            FontSize="16"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <!--  Answer 2  -->
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <RadioButton
                            x:Name="RadioAnswer2"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            GroupName="Answer">
                            <RadioButton.LayoutTransform>
                                <ScaleTransform ScaleX="3" ScaleY="3" />
                            </RadioButton.LayoutTransform>
                        </RadioButton>
                        <TextBox
                            x:Name="InpAnswer2"
                            Width="1200"
                            Height="120"
                            AcceptsReturn="True"
                            FontSize="16"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <!--  Answer 3  -->
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <RadioButton
                            x:Name="RadioAnswer3"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            GroupName="Answer">
                            <RadioButton.LayoutTransform>
                                <ScaleTransform ScaleX="3" ScaleY="3" />
                            </RadioButton.LayoutTransform>
                        </RadioButton>
                        <TextBox
                            x:Name="InpAnswer3"
                            Width="1200"
                            Height="120"
                            AcceptsReturn="True"
                            FontSize="16"
                            TextWrapping="Wrap" />
                    </StackPanel>

                    <!--  Answer 4  -->
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <RadioButton
                            x:Name="RadioAnswer4"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            GroupName="Answer">
                            <RadioButton.LayoutTransform>
                                <ScaleTransform ScaleX="3" ScaleY="3" />
                            </RadioButton.LayoutTransform>
                        </RadioButton>
                        <TextBox
                            x:Name="InpAnswer4"
                            Width="1200"
                            Height="120"
                            AcceptsReturn="True"
                            FontSize="16"
                            TextWrapping="Wrap" />
                    </StackPanel>

                </WrapPanel>
                <StackPanel
                    Margin="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        x:Name="BtnAdd"
                        Width="300"
                        Height="50"
                        Margin="30,10"
                        Background="Yellow"
                        Click="BtnAdd_Click"
                        Content="Add New Question"
                        FontSize="32" />
                    <Button
                        x:Name="BtnSave"
                        Width="200"
                        Height="50"
                        Margin="30,10"
                        Background="LightGreen"
                        Click="BtnSave_Click"
                        Content="Save"
                        FontSize="32" />

                    <Button
                        Width="200"
                        Height="50"
                        Margin="30,10"
                        Background="IndianRed"
                        Click="Button_Click"
                        Content="Remove"
                        FontSize="32" />
                </StackPanel>
            </StackPanel>

        </ScrollViewer>
    </Grid>
</Page>
