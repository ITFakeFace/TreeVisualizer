<Window x:Class="TreeVisualizer.Views.SaveTreeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeVisualizer.Views"
        mc:Ignorable="d"
        Title="SaveTreeWindow"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Height="330" Width="700">
    <Window.Resources>
        <Style x:Key="SaveCancelButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="10,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#f0f0f0"/>
                    <Setter Property="BorderBrush" Value="#999"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#e0e0e0"/>
                    <Setter Property="BorderBrush" Value="#888"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Margin" Value="6,0,0,0"/>
            <Setter Property="Background" Value="#28a745"/>
            <!-- Màu xanh lá -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="BorderBrush" Value="#28a745"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="10,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                    <!-- Hover xanh đậm hơn -->
                    <Setter Property="BorderBrush" Value="#1e7e34"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1e7e34"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Group: Tên cây -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Tên cây" FontWeight="Bold" FontSize="14" Foreground="#444" Margin="0,0,0,4"/>
            <TextBox x:Name="TreeNameBox" Height="30" FontSize="13" Padding="6" />
        </StackPanel>

        <!-- Group: Mô tả -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Mô tả" FontWeight="Bold" FontSize="14" Foreground="#444" Margin="0,0,0,4"/>
            <TextBox x:Name="TreeDescriptionBox" Height="60" FontSize="13" Padding="6" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>

        <!-- Spacer -->
        <Border Grid.Row="2"/>

        <!-- Button Action -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="3">
            <Button Content="Hủy" Style="{StaticResource SaveCancelButtonStyle}" Click="Cancel_Click"/>
            <Button Content="Lưu" Style="{StaticResource SaveButtonStyle}" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
