<Window x:Class="TreeVisualizer.Views.SuccessMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thành công"
        Height="200" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="White"
        AllowsTransparency="True">
    <Border CornerRadius="12" BorderBrush="#28a745" BorderThickness="2" Background="White" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="✅" FontSize="26" Margin="0,0,10,0"/>
                <TextBlock Text="Thành công!" FontSize="18" FontWeight="Bold" Foreground="#28a745"/>
            </StackPanel>

            <TextBlock x:Name="MessageText" Grid.Row="1" FontSize="14" Foreground="#333" TextWrapping="Wrap"/>

            <Button Grid.Row="2"
        Content="Đóng"
        Width="80"
        Height="32"
        HorizontalAlignment="Right"
        Margin="0,20,0,0"
        Background="Transparent"
        Foreground="#28a745"
        FontWeight="SemiBold"
        BorderBrush="#28a745"
        BorderThickness="1"
        Cursor="Hand"
        Click="Close_Click">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="10,2"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#28a74522"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#28a74533"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </Grid>
    </Border>
</Window>
