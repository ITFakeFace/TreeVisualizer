<Window x:Class="TreeVisualizer.Views.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeVisualizer.Views"
        mc:Ignorable="d"
        Width="1920"
        Height="1080"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="80" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Sidebar  -->
        <Border
           x:Name="Sidebar"
           Background="#2C3E50"
           MouseEnter="Sidebar_MouseEnter"
           MouseLeave="Sidebar_MouseLeave">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  Top Navigation  -->
                <StackPanel
                   x:Name="SidebarButtonsPanel"
                   Margin="0,20,0,0"
                   Orientation="Vertical">
                    <Button
                       x:Name="BtnHome"
                       Width="70"
                       Height="70"
                       Margin="5,20,5,0"
                       Padding="10"
                       HorizontalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       Click="BtnHome_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="30" Text="🏠" />
                            <TextBlock
                               x:Name="HomeText"
                               FontSize="24"
                               Text=" Homepage"
                               Visibility="Collapsed" />
                        </StackPanel>
                    </Button>

                    <Button
                       x:Name="BtnQuizz"
                       Width="70"
                       Height="70"
                       Margin="5,20,5,0"
                       Padding="10"
                       HorizontalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       Click="BtnQuizz_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="30" Text="📋" />
                            <TextBlock
                               x:Name="DashboardText"
                               FontSize="24"
                               Text=" Quizzes"
                               Visibility="Collapsed" />
                        </StackPanel>
                    </Button>

                    <Button
                        x:Name="BtnTreeVisualize"
                        Width="70"
                        Height="70"
                        Margin="5,20,5,0"
                        Padding="10"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="BtnTreeVisualize_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image x:Name="TreeVisuizeIconBtn"
                                   Source="pack://application:,,,/Resources/Static/Images/TreeVisualizeIcon/TreeVIsualizeIcon.png"
                                   Width="50" Height="46"/>
                            <TextBlock
                               x:Name="TreeVisualizeText"
                               FontSize="24"
                               Text=" Quizzes"
                               Visibility="Collapsed" />
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!--  Bottom Actions  -->
                <StackPanel
                   x:Name="SidebarBottomPanel"
                   Grid.Row="1"
                   Margin="0,0,0,20"
                   Orientation="Vertical">
                    <Button
                       x:Name="BtnAccount"
                       Width="70"
                       Height="70"
                       Margin="5,0,5,20"
                       Padding="10"
                       HorizontalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center" Click="BtnAccount_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="30" Text="👤" />
                            <TextBlock
                               x:Name="SettingsText"
                               FontSize="24"
                               Text=" Account"
                               Visibility="Collapsed" />
                        </StackPanel>
                    </Button>

                    <Button
                       x:Name="BtnLogout"
                       Width="70"
                       Height="70"
                       Margin="5,0,5,20"
                       Padding="10"
                       HorizontalAlignment="Center"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center" Click="BtnLogout_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontSize="30" Text="⬅️" />
                            <TextBlock
                               x:Name="LogoutText"
                               FontSize="24"
                               Text=" Logout"
                               Visibility="Collapsed" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!--  Main Content  -->
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <StackPanel Height="70" Orientation="Horizontal">
                <Button
                   Background="Transparent"
                   BorderBrush="Transparent"
                   Content="⬅️ Back"
                   FontSize="32"
                   IsEnabled="True">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                               Background="{TemplateBinding Background}"
                               BorderBrush="{TemplateBinding BorderBrush}"
                               BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   RecognizesAccessKey="True" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="True">
                                    <Setter Property="Foreground" Value="Black" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Foreground" Value="Transparent" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <TextBlock
                   x:Name="TxtPageTitle"
                   Margin="30,0,0,0"
                   FontSize="48"
                   FontWeight="Bold"
                   Text="Page Title" />
            </StackPanel>
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        </StackPanel>
    </Grid>

</Window>
