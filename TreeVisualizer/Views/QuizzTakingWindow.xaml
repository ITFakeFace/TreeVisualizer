<Window
    x:Class="TreeVisualizer.Views.QuizzTakingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TreeVisualizer.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="QuizzTakingWindows"
    Width="1338"
    Height="746"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="QuestionChoiceBtn" TargetType="Button">
            <Setter Property="Height" Value="50" />
            <Setter Property="Width" Value="30" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Margin" Value="2.5,2.5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter Property="Background" Value="LightBlue" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="50" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <StackPanel Orientation="Horizontal">
                            <Grid
                                Width="40"
                                Height="40"
                                Margin="0,0,8,0">
                                <Ellipse
                                    Fill="White"
                                    Stroke="Black"
                                    StrokeThickness="2" />
                                <Ellipse
                                    x:Name="Dot"
                                    Margin="4"
                                    Fill="Black"
                                    Visibility="Collapsed" />
                            </Grid>
                            <ContentPresenter VerticalAlignment="Center" />
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Dot" Property="Visibility" Value="Visible" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="9*" />
        </Grid.ColumnDefinitions>

        <!--  Sidebar  -->
        <Border
            x:Name="Sidebar"
            Grid.Column="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#2C3E50">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  List câu hỏi  -->
                <StackPanel
                    x:Name="SidebarButtonsPanel"
                    Margin="0,20,0,0"
                    Orientation="Vertical"
                    Visibility="Visible">
                    <StackPanel Grid.Row="0">
                        <TextBlock
                            FontSize="16"
                            Foreground="White"
                            Text="Question List" />
                    </StackPanel>
                    <WrapPanel
                        x:Name="QuestionChoicePanel"
                        Width="{Binding ElementName=SideBar, Path=ActualWidth}"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal" />
                </StackPanel>

                <!--  Nút Nộp bài  -->
                <Button
                    Grid.Row="2"
                    Height="40"
                    Margin="10"
                    Background="LightGreen"
                    Click="SubmitBtn_OnClick"
                    Content="✅ Submit" />
            </Grid>
        </Border>

        <!--  Nội dung câu hỏi chính  -->
        <Grid Grid.Column="1" Margin="20">
            <StackPanel
                x:Name="QuestionAndAnswer"
                Grid.Column="1"
                HorizontalAlignment="Center">
                <!--  Countdown TextBlock  -->
                <TextBlock
                    Name="CountdownTextBlock"
                    Margin="0,10,0,20"
                    HorizontalAlignment="Center"
                    FontSize="32"
                    Foreground="Red" />

                <!--  Câu hỏi  -->
                <TextBlock
                    x:Name="questionTxtBlock"
                    Margin="0,0,0,10"
                    FontSize="60"
                    TextWrapping="Wrap" />

                <!--  Các câu trả lời  -->
                <StackPanel x:Name="AnswersPanel">
                    <RadioButton
                        x:Name="Q1"
                        Checked="Answer_Checked"
                        GroupName="answerRadioBtn" />
                    <RadioButton
                        x:Name="Q2"
                        Checked="Answer_Checked"
                        GroupName="answerRadioBtn" />
                    <RadioButton
                        x:Name="Q3"
                        Checked="Answer_Checked"
                        GroupName="answerRadioBtn" />
                    <RadioButton
                        x:Name="Q4"
                        Checked="Answer_Checked"
                        GroupName="answerRadioBtn" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <!--  Nút Next và Submit  -->
        <Button
            x:Name="NextBtn"
            Grid.Column="1"
            Width="194"
            Height="44"
            Margin="939,605,71,0"
            VerticalAlignment="Center"
            Background="LightGreen"
            Click="NextBtn_Click"
            FontSize="32">
            <TextBlock
                x:Name="NextBtnTxtBlock"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                Next
            </TextBlock>
        </Button>

        <Button
            x:Name="SubmitBtn"
            Grid.Column="1"
            Width="194"
            Height="44"
            Margin="939,605,71,0"
            VerticalAlignment="Center"
            Background="LightGreen"
            Click="SubmitBtn_OnClick"
            FontSize="32"
            Visibility="Collapsed">
            <TextBlock
                x:Name="SubmitTxtBlock"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                Submit
            </TextBlock>
        </Button>
    </Grid>
</Window>
