<UserControl 
    x:Class="TreeVisualizer.Components.QuizzComponent.QuizzAnalyzerUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:TreeVisualizer.Components.QuizzComponent"
    mc:Ignorable="d" 
    d:DesignHeight="450" 
    d:DesignWidth="800">
    <Grid>
        <!--  Canvas vẽ bán cầu  -->
        <Canvas
        x:Name="HalfPieCanvas"
        Width="300"
        Height="150" />

        <!--  Bán cầu trắng đè lên để tạo hiệu ứng rỗng (donut)  -->
        <Path x:Name="WhiteHalfCircle" Fill="White" />

        <!--  Text hiển thị số lượng quizz  -->
        <TextBlock
        x:Name="TxtQuizzCount"
        Margin="0,55,0,0"
        HorizontalAlignment="Center"
        VerticalAlignment="Bottom"
        FontSize="24"
        FontWeight="Bold"
        Foreground="Black"
        Text="0" />
    </Grid>
</UserControl>
